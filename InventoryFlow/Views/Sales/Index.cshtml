@model List<Sale>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Items</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sale in Model)
        {
            <tr>
                <td>@sale.SaleDate.ToString("g")</td>
                <td>
                    @foreach (var item in sale.SaleItems)
                    {
                        <div>@item.Product.Name × @item.Quantity</div>
                    }
                </td>
                <td>@sale.TotalAmount.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>