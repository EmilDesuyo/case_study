@model InventoryFlow.Models.Supplier

@{
    ViewData["Title"] = "Delete Supplier";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 bg-danger text-white">
        <h6 class="m-0 font-weight-bold">Delete Supplier</h6>
    </div>
    <div class="card-body">
        @if (ViewBag.DeleteWarning != null)
        {
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle-fill"></i> @ViewBag.DeleteWarning
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                <i class="bi bi-exclamation-octagon-fill"></i> @TempData["ErrorMessage"]
            </div>
        }

        <h3 class="text-danger">Are you sure you want to delete this supplier?</h3>

        <dl class="row mt-4">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Phone)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Phone)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="form-group mt-4">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>